#include "iom128v.h"
#include "macros.h"

void delay(int ms)
{
 int c1, c2;
 for(c1=0;c1<ms;c1++)
  for(c2=0;c2<970;c2++) NOP();
}

void main()
{
 char seg[10]={0b01110111, 0b01100000, 0b00111110, 0b01111010, 0b01101001,
  0b01011011, 0b01011111, 0b01110000,0b01111111, 0b01111011};
 int i;
 DDRC=0b10000111;    // управление дешифратором шины данных
 DDRA=0xFF;		   // шина данных
 DDRG=0x01;		   // разрешение работы дешифратора
 PORTG=0;	 	   // установка на выходе PG0 лог. 0
 PORTA=0;		   // выключить свечение матричного индикатора
 PORTC=0;		   // выбираем столбцы
 PORTC=5;		   // выбираем строки
 while(1)
 {
  for(i=0;i<10000;i++)
  {
   PORTC=6;			  // включение индикатора Н6
   PORTA=~seg[i/1000];   //вывод в порт значения тысяч
   PORTC=7; 			// включение индикатора Н7
   PORTA=~seg[(i%1000)/100];  //вывод в порт значения сотен
   PORTC=1;				// включение индикатора Н8
   PORTA=~seg[((i%1000)%100)/10];  //вывод в порт значения десятых
   PORTC=2;					// включение индикатора Н9
   PORTA=~seg[((i%1000)%100)%10];  //вывод в порт значения единиц
  delay(100);     		// формирование временной задержки
  }
 }
}












